<% if @user&.id %>
  <% if current_page?(controller: 'users', action: 'show', id: @user.id) %>
    <%= render  partial: 'shared/mini_navbar_partial',
                locals: {
                  heading: "#{@user.name}",
                  detail: "#{pluralize(@user.microposts.count, 'micropost')}"
                } %>

  <% elsif current_page?(controller: 'users', action: 'media', id: @user.id) %>
    <%= render  partial: 'shared/mini_navbar_partial',
                locals: {
                  heading: "#{@user.name}",
                  detail: "#{pluralize(@user.media.count, 'photo')}"
                } %>

  <% elsif current_page?(controller: 'users', action: 'following', id: @user.id) %>
    <%= render  partial: 'shared/mini_navbar_partial',
                locals: {
                  heading: "#{@user.name}",
                  detail:  "@#{@user.username}"
                } %>

  <% elsif current_page?(controller: 'users', action: 'followers', id: @user.id) %>
    <%= render  partial: 'shared/mini_navbar_partial',
                locals: {
                  heading: "#{@user.name}",
                  detail: "@#{@user.username}"
                } %>

  <% elsif current_page?(controller: 'users', action: 'edit', id: @user.id) %>
    <%= render  partial: 'shared/mini_navbar_partial',
                locals: {
                  heading: "#{@user.name}",
                  detail: "Edit profile"
                } %>
  <% end %>
<% end %>

<% if current_page?('/home') %>
  <%= render 'shared/mini_navbar_home' %>

<% elsif current_page?(controller: 'users', action: 'index') %>
  <%= render  partial: 'shared/mini_navbar_partial',
              locals: {
                heading: "Explorer",
                detail: "Let's follow other people"
              } %>
<% end %>
