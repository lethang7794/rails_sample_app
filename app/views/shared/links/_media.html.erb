<% if logged_in? %>
  <%= active_link_to 'Media', media_user_path(user), remote: true, class: "tab-link media-link flex-grow-1 flex-center", active: [users: :media] %>
<% else %>
  <!-- Button trigger modal -->
  <div class="pseudo-tab flex-center" data-toggle="modal" data-target="#login-modal-media-user-<%= user.id %>">
    Media
  </div>

  <!-- Modal -->
  <div class="modal fade login-modal" id="login-modal-media-user-<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header center">
          <%= render 'shared/svg/images' %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <%= render partial: 'shared/svg/button', locals: { svg: "close" } %>
          </button>
          <h3 class="modal-title" id="myModalLabel">
            Don't miss what happening
          </h3>
          <p>
            People on Sample App are the first one to know.
          </p>
        </div>
        <div class="modal-body">
          <%= render partial: 'shared/login_form_modal', locals: { forward_to: media_user_path(user) } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
