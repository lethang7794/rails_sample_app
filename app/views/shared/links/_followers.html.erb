<% if logged_in? %>
  <%= link_to followers_user_path(@user) do %>
    <%= render partial: 'shared/followers_count', locals: { user: @user } %>
    <span>Followers</span>
  <% end %>

<% else %>
  <!-- Button trigger modal -->
  <div class="pseudo-link" data-toggle="modal" data-target="#login-modal-followers-user-<%= @user.id %>">
    <%= render partial: 'shared/followers_count', locals: { user: @user } %>
    <span>Followers</span>
  </div>

  <!-- Modal -->
  <div class="modal fade login-modal" id="login-modal-followers-user-<%= @user.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header center">
          <%= render 'shared/svg/people_fill' %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <%= render partial: 'shared/svg/button', locals: { svg: "close" } %>
          </button>
          <h3 class="modal-title" id="myModalLabel">
            Don't miss what happening
          </h3>
          <p>
            People on Sample App are the first one to know.
          </p>
        </div>
        <div class="modal-body">
          <%= render partial: 'shared/login_form_modal', locals: { forward_to: followers_user_path(@user) } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
