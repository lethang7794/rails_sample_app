<div class="modal fade" id="avatar-modal-<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="flex-center max-dem no-scroll">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <div class="button-wrapper my-flex-container flex-center">
              <div class="button" aria-hidden="true">
                <%= render 'shared/svg/close' %>
              </div>
            </div>
          </button>
          <div>
            <%= gravatar_for(user, size: 2048)%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
