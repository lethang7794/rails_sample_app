<% col ||= 6 %>
<% offset ||= 3 %>

<div class="row position-sticky top-4 bg-white">
  <div class="col-md-<%= col %> col-md-offset-<%= offset %>">
    <div class="flex flex-row mini-navbar-container border border-bottom-0">
      <div class="left-side flex-center">
        <div id= 'back-button'>
          <div class="button-wrapper flex-center mini-navbar-button-wrapper">
            <div class="button flex-center" aria-hidden="true">
              <%= render 'shared/svg/back' %>
            </div>
          </div>
        </div>

        <%= link_to root_path, id: 'home-button' do %>
          <div class="button-wrapper flex-center mini-navbar-button-wrapper">
            <div class="button flex-center" aria-hidden="true">
              <%= render 'shared/svg/home' %>
            </div>
          </div>
        <% end %>

        <%# Begin - Remove unnecessary button %>
        <script>
          if (history.length > 2) {
            $( "#home-button" ).remove();
          } else {
            $( "#back-button" ).remove();
          }

          document.getElementById('back-button').onclick = function goBack() {
            history.back();
          }
        </script>
        <%# End - Remove unnecessary button %>
      </div>
      <div class="middle-side flex-grow-1 flex flex-column">
        <div class="flex-grow-1 flex flex-row flex-align-items-center">
          <h2 id="mini-bar-heading">
            <%= heading %>
          </h2>
        </div>
      <% if detail %>
        <div id="mini-bar-detail" class="detail">
          <%= detail %>
        </div>
      <% end %>
      </div>
      <div class="right-side"></div>
    </div>
  </div>
</div>
