<%= form_with(url: '/login', scope: 'session', local: true) do |f| %>
  <%= hidden_field_tag 'session[forwarding_url]', "#{forward_to}" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.submit "Log in", class: "btn btn-primary"%>
<% end %>
