<% @user ||= current_user %>

<div class="flex flex-row flex-wrap stats">
  <div class="stat">
    <%= link_to following_user_path(@user) do %>
      <div id="following_of_<%= @user.id %>_wrapper" class="flex-inline following-wrapper">
        <span id="following_of_<%= @user.id %>" class="following_of_<%= @user.id %> stats following">
          <%= @user.following.count %>
        </span>
      </div>
      <span>Following</span>
    <% end %>
  </div>
  <div class="stat">
    <%= link_to followers_user_path(@user) do %>
      <strong id="followers_of_<%= @user.id %>" class="stats followers">
        <%= @user.followers.count %>
      </strong>
      Followers
    <% end %>
  </div>
</div>
