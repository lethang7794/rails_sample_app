// Change page title
document.title = "<%= @title.html_safe %>";

// Change URL
history.replaceState( history.state, "", "<%= following_user_path(@user) %>" );

// Change active tab
$(".tab-link").removeClass("active");
$(".tab-link.following-link").addClass("active");

// See new content from top
$(window).scrollTop(60);

// Change tab content - users
$("#tab-content").html("<%= escape_javascript(render partial: 'shared/users', locals: { users: @users }) %>");

// Store previous URL (used in mini-navbar for replace home button with back button when reload page)
localStorage.setItem("previousURL", "<%= request.original_url %>");
