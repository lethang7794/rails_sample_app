<% if current_page?(controller: 'users', action: 'following') %>
  <%= provide :page_title, "People followed by #{@user.name} (@#{@user.username})" %>
<% elsif current_page?(controller: 'users', action: 'followers') %>
  <%= provide :page_title, "People following #{@user.name} (@#{@user.username})" %>
<% end %>

<!-- PAGE CONTENT - BEGIN -->
<div class="row">
	<!-- Following/Followers list - Begin -->
	<div class="col-md-6 col-md-offset-3 follow-list">
		<div class="flex flex-row border-right border-bottom border-left">
			<div class="flex-grow-1 flex-center tab-container">
				<%= active_link_to following_user_path(@user), class: "flex-grow-1 flex-center" do %>
					<% if current_page?(controller: 'users', action: 'following') and current_user?(@user) %>
						<%= render partial: 'shared/following_count', locals: { user: @user } %>
          <% end %>
					<span>Following</span>
				<% end %>
			</div>
			<div class="flex-grow-1 flex-center tab-container">
				<%= active_link_to followers_user_path(@user), class: "flex-grow-1 flex-center" do %>
					<span>Followers</span>
				<% end %>
			</div>
		</div>

    <div id="tab-content">
      <%= render partial: 'shared/users', locals: { users: @users } %>
    </div>
	</div>
	<!-- Following/Followers list - End -->
</div>
<!-- PAGE CONTENT - END -->
