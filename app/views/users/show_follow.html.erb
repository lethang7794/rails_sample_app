<!-- MINI NAVIGATION BAR - BEGIN -->
<% if current_page?(controller: 'users', action: 'following') %>
  <%= provide :page_title, "People following #{@user.name}" %>

  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <div>BACK BUTTON</div>
      <div><%= @user.name %></div>
      <div>Following</div>
    </div>
  </div>
<% elsif current_page?(controller: 'users', action: 'followers') %>
  <%= provide :page_title, "People followed by #{@user.name}" %>

  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <div>BACK BUTTON</div>
      <div><%= @user.name %></div>
      <div>Followers</div>
    </div>
  </div>
<% end %>
<!-- MINI NAVIGATION BAR - END -->

<!-- PAGE CONTENT - BEGIN -->
<div class="row">
	<!-- Following/Followers list - Begin -->
	<div class="col-md-6 col-md-offset-3 follow-list">
		<!-- User overview - Begin -->
		<section class="user_info">
			<div class="flex flex-row flex-center">
				<div class="flex-80 flex flex-column">
					<div class="flex-80">
						<div>
							<%= gravatar_for @user %>
						</div>
					</div>
				</div>
				<div class="info flex-center flex-column">
					<h1>
						<%= @user.name %>
					</h1>
					<section class="stats">
						<%= render 'shared/stats' %>
					</section>
				</div>
			</div>
		</section>
		<!-- User overview - End -->

		<div class="flex flex-row">
			<div class="flex-grow-1 flex-center tab-container">
				<%= active_link_to 'Following', following_user_path(@user), class: "flex-grow-1 flex-center" %>
			</div>
			<div class="flex-grow-1 flex-center tab-container">
				<%= active_link_to 'Followers', followers_user_path(@user), class: "flex-grow-1 flex-center" %>
			</div>
		</div>

		<% if @users.any? %>
			<ol class="users follow">
				<%= render @users %>
			</ol>
			<div class="flex-center">
				<%= will_paginate @microposts %>
			</div>
		<% end %>
	</div>
	<!-- Following/Followers list - End -->
</div>
<!-- PAGE CONTENT - END -->
