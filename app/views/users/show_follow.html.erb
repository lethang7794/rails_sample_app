<%= provide :page_title, @title %>

<div class="row">
	<!-- User overview - Begin -->
	<aside class="col-md-4">
		<section class="user_info">
      <%= gravatar_for @user %>
			<h1><%= @user.name %></h1>
      <span>Microposts: <%= @user.microposts.count %></span>
		</section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to (gravatar_for user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
	</aside>
	<!-- User overview - End -->
	<!-- Following/Followers list - Begin -->
	<div class="col-md-8">
		<!-- User overview - End -->

		<div class="flex flex-row">
			<div class="flex-grow-1 flex-center tab-container">
				<%= active_link_to 'Following', following_user_path(@user), class: "flex-grow-1 flex-center" %>
			</div>
			<div class="flex-grow-1 flex-center tab-container">
				<%= active_link_to 'Followers', followers_user_path(@user), class: "flex-grow-1 flex-center" %>
			</div>
		</div>

		<% if @users.any? %>
			<ol class="users follow">
				<%= render @users %>
			</ol>
			<div class="flex-center">
				<%= will_paginate @microposts %>
			</div>
		<% end %>
	</div>
	<!-- Following/Followers list - End -->
</div>
