<% provide :page_title, "Edit user" %>
<% provide :button_text, 'Save changes' %>

<!-- MINI NAVIGATION BAR - BEGIN -->
<% if current_page?(controller: 'users', action: 'edit') %>
  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <div>BACK BUTTON</div>
      <div>Edit your profile</div>
    </div>
  </div>
<% end %>
<!-- MINI NAVIGATION BAR - END -->

<!-- PAGE CONTENT - BEGIN -->
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="center">
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <div>
          <a href="https://gravatar.com/emails" target="_blank" rel=”noopener noreferrer>
            Change Gravatar
            <img alt="(Open in new window)" src="<%= image_path "open-in-new-window.svg" %>">
          </a>
        </div>
      </div>
    </div>
    <%= render 'form' %>
  </div>
</div>
<!-- PAGE CONTENT - END -->
