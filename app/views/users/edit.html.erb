<% provide :page_title, "Edit user" %>
<% provide :button_text, 'Save changes' %>

<!-- PAGE CONTENT - BEGIN -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-main-content">
      <div class="user-edit-wrapper border">
        <div class="gravatar_edit center">
          <%= gravatar_for @user %>
          <div>
            <a href="https://gravatar.com/emails" target="_blank" rel=”noopener noreferrer>
              Change Gravatar
              <img alt="(Open in new window)" src="<%= image_path "open-in-new-window.svg" %>">
            </a>
          </div>
        </div>
        <div class="padding-10">
          <%= render 'edit_form' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- PAGE CONTENT - END -->
