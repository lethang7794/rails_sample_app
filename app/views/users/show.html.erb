<%= provide :page_title, @user.name %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<section class="stats">
				<%= render 'shared/stats' %>
			</section>
		</section>
	</aside>
	<div class="col-md-8">
		<%= render 'shared/follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>
				Microposts (<span><%= @user.microposts.count %></span>)
			</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<div class="flex-center">
				<%= will_paginate @microposts %>
			</div>
		<% end %>
	</div>
</div>
