<%= provide :page_title, @user.name %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<div class="flex flex-row">
				<div class="flex-80 flex flex-column">
					<div class="flex-80">
			      <%= gravatar_for @user %>
			    </div>
				</div>
				<div class="info">
					<h1>
						<%= @user.name %>
					</h1>
					<section class="stats">
						<%= render 'shared/stats' %>
					</section>
				</div>
			</div>

		</section>
	</aside>
	<div class="col-md-8">
		<%= render 'shared/follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>
				Microposts (<span><%= @user.microposts.count %></span>)
			</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<div class="flex-center">
				<%= will_paginate @microposts %>
			</div>
		<% end %>
	</div>
</div>
