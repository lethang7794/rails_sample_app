<%= provide :page_title, @user.name %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<div class="flex flex-row">
				<div class="flex-80 flex flex-column">
					<div class="flex-80">
						<div class="dimmer-wrapper" data-toggle="modal" data-target="#my-micropost-modal-<%= @user.id %>">
							<div class="user_avatar">
								<%= gravatar_for @user %>
							</div>
			        <div class="dimmer transition-03s"></div>
						</div>
						<!-- MODAL - BEGIN -->
						<div class="modal fade" id="my-micropost-modal-<%= @user.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-body">
										<div class="flex-center max-dem no-scroll">
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<div class="button-wrapper my-flex-container flex-center">
													<div class="close-button" aria-hidden="true">
														<svg viewBox="0 0 24 24" class="r-jwli3a r-4qtqp9 r-yyyyoo r-1q142lx r-50lct3 r-dnmrzs r-bnwqim r-1plcrui r-lrvibr"><g><path d="M13.414 12l5.793-5.793c.39-.39.39-1.023 0-1.414s-1.023-.39-1.414 0L12 10.586 6.207 4.793c-.39-.39-1.023-.39-1.414 0s-.39 1.023 0 1.414L10.586 12l-5.793 5.793c-.39.39-.39 1.023 0 1.414.195.195.45.293.707.293s.512-.098.707-.293L12 13.414l5.793 5.793c.195.195.45.293.707.293s.512-.098.707-.293c.39-.39.39-1.023 0-1.414L13.414 12z"></path></g></svg>
													</div>
												</div>
											</button>
											<div>
												<%= gravatar_for(@user, size: 2048)%>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- MODAL - END -->
					</div>
				</div>
				<div class="info">
					<h1>
						<%= @user.name %>
					</h1>
					<section class="stats">
						<%= render 'shared/stats' %>
					</section>
				</div>
			</div>
		</section>
	</aside>
	<div class="col-md-8">
		<%= render partial: 'shared/follow_form', locals: { user: @user } if logged_in? %>

		<% if @user.microposts.any? %>
			<h3>
				Microposts (<span><%= @user.microposts.count %></span>)
			</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<div class="flex-center">
				<%= will_paginate @microposts %>
			</div>
		<% end %>
	</div>
</div>
