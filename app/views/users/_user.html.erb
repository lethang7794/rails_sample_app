<div class="user-container">
  <div class="flex flex-row">
    <div class="flex-50 flex flex-column">
      <div class="flex-50 dimmer-wrapper">
        <%= gravatar_for user, size: 50 %>
        <div class="dimmer transition-03s"></div>
      </div>
    </div>
    <div class="main-content flex flex-row flex-grow-1 flex-center">
      <div class="flex flex-column">
        <span class="name">
          <%= link_to user.name, user %>
        </span>
        <span class="username">
          <%= link_to "@#{user.username}", user %>
        </span>
      </div>
      <span class="flex-grow-1"></span>
      <span class="delete-option">
        <% if current_user && current_user.admin? && !current_user?(user) %>
          <%= link_to '(delete)', user,   method: :delete,
                                            data: { confirm: 'You sure?'} %>
        <% end %>
      </span>
      <span>
        <%= render partial: 'shared/follow_form', locals: {user: user} %>
      </span>
    </div>
  </div>
</div>
